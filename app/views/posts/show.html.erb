<!--본문-->
<div class="bodywrapper">
<div class="container">
  <div class="align">
    
<h1 id="title" style="margin-bottom:0;"><%= @post.title %></h1>

<div id="like"><%= @post.likes.size %>명이 좋아합니다.</div>

<div><%= image_tag("#{@post.image}") %></div>
<p id="content">
  <%= @post.content %>
</p>

<p>
  <% if current_user.is_like? (@post) %>
  <form action='/post/<%= @post.id %>/like' method='post'>
    <div class="button" style="background-color:#db5353"><button style="border:0; margin:0; background:transparent;background-color:#db5353; text-decoration:none !important; color:#d1cabc; font-family: 'WONDotum'; font-weight:bold;">좋아요 취소</button></div> <br>
  </form>
  
  <% else %>
  <form action='/post/<%= @post.id %>/like' method='post'>
    <div class="button" style="background-color:#db5353"><button style="border:0; margin:0; background:transparent;background-color:#db5353; text-decoration:none !important; color:#d1cabc; font-family: 'WONDotum'; font-weight:bold;">좋아요</button></div> <br>
  </form>
<% end %>
<div class="button">
<%= link_to 'Edit', edit_post_path(@post), style:"text-decoration:none !important; color:#d1cabc; font-family: 'WONDotum'; font-weight:bold;" %>
</div>
<br>
<div class="button">
<%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, style:"text-decoration:none !important; color:#d1cabc; font-family: 'WONDotum'; font-weight:bold;" %>
</div>
<br>
<div class="button">
<%= link_to 'Back', beertap_url, style:"text-decoration:none !important; color:#d1cabc; font-family: 'WONDotum'; font-weight:bold;" %>
</div>

</p>
</div>
</div>
